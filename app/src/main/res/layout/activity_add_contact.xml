<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/page_padding"
    android:background="@drawable/family_background"
    android:orientation="vertical"
    tools:context="qilin.caiqiaolinpan.activity.AddContactActivity">

    <ImageView
        android:id="@+id/iv_choose_profile_picture"
        android:layout_marginTop="30dp"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/profile_0" />

    <LinearLayout
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/activity_add_contact_tv_width"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_add_contact_text_size"
                android:text="@string/activity_new_contact_tv_name" />

            <EditText
                android:id="@+id/et_new_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/activity_add_contact_text_size" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/activity_add_contact_tv_width"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_add_contact_text_size"
                android:text="@string/activity_new_contact_tv_phone" />

            <EditText
                android:id="@+id/et_new_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textSize="@dimen/activity_add_contact_text_size" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/activity_add_contact_tv_width"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_add_contact_text_size"
                android:text="@string/activity_new_contact_tv_dob" />

            <EditText
                android:id="@+id/et_new_contact_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textSize="@dimen/activity_add_contact_text_size" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:text="@string/label_add"
        android:textSize="@dimen/btn_text_size"
        android:background="@drawable/button_add_contact"
        style="@style/button_text"
        android:onClick="addContact" />

</LinearLayout>
